<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/dimen"
    tools:context=".VerInfo">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/buscar"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#FFFFFF"
        app:civ_shadow_radius="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nombre_del_proyecto"
            android:textAllCaps="true"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/tvNombreProyecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="000"
            android:textAllCaps="true"
            android:textColor="#FFF" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nombre_usuario"
            android:textAllCaps="true"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/tvNombreUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textAllCaps="true"
            android:textColor="#FFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lenguaje"
            android:textAllCaps="true"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/tvLenguaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000"
            android:textAllCaps="true"
            android:textColor="#FFF" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen"
        android:text="@string/descripcion"
        android:textAllCaps="true"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/tvDescricionProyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginTop="5dp"
        android:textColor="#FFF" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/dimen"
        android:src="@drawable/iphonedroid" />

</LinearLayout>